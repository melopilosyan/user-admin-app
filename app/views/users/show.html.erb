<h2>User Details</h2>

<div class="user-details-container">
  <div class="logo">
    <%= image_tag @user.logo.url(:thumb) %>
  </div>
  <dl class="dl-horizontal">
    <dt>Full name:</dt>
    <dd><%= @user.full_name %></dd>

    <dt>Email:</dt>
    <dd><%= @user.email %></dd>

    <dt>Birthday:</dt>
    <dd><%= @user.birthday %></dd>

    <dt>BIO:</dt>
    <dd><%= @user.bio %></dd>
  </dl><br>

  <div class="back-link">
    <%= link_to 'Back', users_path %>
  </div>

  <div class="tools">
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Download as PDF', user_path(format: :pdf), download: 'true' %>
  </div>
</div>